<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StatusTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatusMetaInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="EditText"></style>

    <style name="EditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Button"></style>

    <style name="Button.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/action_blue</item>
    </style>

    <style name="ActionItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/action_item_padding</item>
        <item name="android:background">@drawable/action_blue</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Item.TextStyle">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#ff131313</item>
    </style>

    <style name="Item.TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.MetaInfoStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Animations" />

    <style name="Animations.Move">
        <item name="@android:windowEnterAnimation">@anim/move_left_to_right</item>
        <item name="@android:windowExitAnimation">@anim/move_right_to_left</item>
    </style>

</resources>