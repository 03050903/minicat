<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/profile_row_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/profile_row_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/profile_row_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/profile_row_vertical_padding</item>
        <item name="android:background">@drawable/selector_list_light</item>
    </style>

    <style name="ProfileItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/profile_item_padding</item>
        <item name="android:background">@drawable/selector_list_light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ProfileButtonTextStyle">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">@color/solid_black</item>
        <!--        <item name="android:shadowDx">0</item>
                <item name="android:shadowDy">1</item>
                <item name="android:shadowRadius">1</item>-->
        <item name="android:textColor">@color/text_color_selectable_primary_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ProfileButtonTextMetaStyle">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color_selectable_secondary_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatusMetaInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="EditText"></style>

    <style name="EditText.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Button"></style>

    <style name="Button.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ActionItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/action_item_padding</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Item.TextStyle">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#ff131313</item>
    </style>

    <style name="Item.TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.MetaInfoStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Animations"/>

    <style name="Animations.Move">
        <item name="@android:windowEnterAnimation">@anim/move_left_to_right</item>
        <item name="@android:windowExitAnimation">@anim/move_right_to_left</item>
    </style>

</resources>