<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" style="?android:attr/borderlessButtonStyle"
              android:orientation="horizontal"
              android:background="@android:color/white" android:padding="6dp">

    <TextView android:id="@+id/text_left" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:duplicateParentState="true"
              android:text="Statuses Count" android:layout_alignParentLeft="true" android:textSize="18sp"/>

    <View android:layout_height="1dp" android:layout_width="0dp" android:layout_weight="1"/>
    <TextView android:id="@+id/text_right" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:duplicateParentState="true"
              android:text="9763" android:layout_alignParentRight="true" android:textSize="18sp"/>


</LinearLayout>