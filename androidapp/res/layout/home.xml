<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.fanfou.app"
	android:layout_width="fill_parent" android:id="@+id/home"
	android:layout_height="fill_parent" android:orientation="vertical">

	<com.fanfou.app.ui.ActionBar android:id="@id/actionbar"
		style="@style/ActionBar" android:layout_alignParentTop="true" />

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/actionbar">

		<android.support.v4.view.ViewPager
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:id="@+id/viewpager" />

		<com.fanfou.app.ui.viewpager.CirclePageIndicator
			android:layout_alignParentTop="true" android:padding="4dp"
			android:layout_width="wrap_content" android:layout_alignParentRight="true"
			android:layout_height="wrap_content" android:id="@+id/viewindicator"
			app:radius="4dp" app:fillColor="#ff58caff" app:strokeColor="#FF999999" />

		<ImageView android:id="@+id/write_bottom" style="@style/Icon.Action"
			android:src="@drawable/i_write_bottom" android:layout_margin="8dp" />

	</RelativeLayout>

</LinearLayout>
