<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/image"
        style="@style/Widget.Head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_head" />

    <TextView
        android:id="@+id/title"
        style="@style/Item.TextBoldStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image"
        android:layout_alignWithParentIfMissing="true"
        android:text="TITLE" />

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_favorite"
            style="@style/Widget.Icon"
            android:src="@drawable/ic_mini_favorite" />

        <ImageView
            android:id="@+id/ic_thread"
            style="@style/Widget.Icon"
            android:src="@drawable/ic_mini_thread" />

        <ImageView
            android:id="@+id/ic_photo"
            style="@style/Widget.Icon"
            android:src="@drawable/ic_mini_photo" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        style="@style/Item.TextStyle"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:text="TEXT TEXT TEXT TEXT TEXT" />

    <TextView
        android:id="@+id/meta"
        style="@style/Item.MetaInfoStyle"
        android:layout_alignLeft="@id/text"
        android:layout_below="@id/text"
        android:text="META INFO 2012" />

</merge>
