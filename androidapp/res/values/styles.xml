    <style name="ProfileImageStyle">
        <item name="android:layout_width">@dimen/profile_image_width</item>
        <item name="android:layout_height">@dimen/profile_image_width</item>
        <item name="android:layout_margin">@dimen/profile_image_margin</item>
    </style>

    <style name="ProfileCountTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?profileCountTextColor</item>
    </style>

    <style name="ProfileCountStyle">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?profileCountBackground</item>
    </style>

    <style name="ProfileActionStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">?profileActionBackground</item>
    </style>

    <style name="ProfileActionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?primaryTextColorReverse</item>
    </style>

    <style name="ProfileItemTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?profileItemTitleBackground</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="ProfileItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="StatusMetaInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:padding">@dimen/status_text_padding</item>
