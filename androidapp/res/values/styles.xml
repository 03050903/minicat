<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="About"></style>

    <style name="About.Title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="About.ItemName">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="About.ItemText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColorLink">@color/profile_relation_blue</item>
    </style>

    <style name="About.Copyright">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="About.ItemText.Center">
        <item name="android:gravity">center</item>
    </style>

    <!-- ===========================below add by mcxiaoke====================== -->

    <style name="MiniIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="logo">@drawable/i_logo</item>
        <item name="android:logo">@drawable/i_logo</item>
    </style>

    <style name="Widget.ActionBar.Light">
        <item name="titleTextStyle">@style/Widget.ActionBarTitle.Light</item>
        <item name="android:titleTextStyle">@style/Widget.ActionBarTitle.Light</item>
        <item name="background">@drawable/actionbar_background</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="Widget.ActionBarTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.ActionBarTitle.Light"></style>

    <style name="Widget.ListView">
        <item name="android:dividerHeight">@dimen/dividerWidth</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.ListView.Light">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">@color/light_grey_translucent</item>
    </style>

    <style name="Widget.TitlePageIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">2dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">false</item>
    </style>

    <style name="Widget.TitlePageIndicator.Light">
        <item name="footerColor">@color/fanfoublue</item>
    </style>

    <style name="Widget.ButtonGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.ButtonGroup.Light">
        <item name="android:background">@color/fanfoublue_background</item>
    </style>

    <style name="Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.Button.Light">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.EditProfileInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.EditProfileInput.Light">
        <item name="android:background">@drawable/input</item>
    </style>

    <style name="ProfileImageStyle">
        <item name="android:layout_width">@dimen/profile_image_width</item>
        <item name="android:layout_height">@dimen/profile_image_width</item>
        <item name="android:layout_margin">@dimen/profile_image_margin</item>
    </style>

    <style name="ProfileCountTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?profileCountTextColor</item>
    </style>

    <style name="ProfileCountStyle">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?profileCountBackground</item>
    </style>

    <style name="ProfileActionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?primaryTextColorReverse</item>
    </style>

    <style name="ProfileItemTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?profileItemTitleBackground</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="ProfileItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="StatusTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="StatusMetaInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:padding">@dimen/status_text_padding</item>
        <item name="android:textColor">?secondaryTextColor</item>
    </style>

    <style name="StatusPhotoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LoginTopLogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">?loginTopLogo</item>
    </style>

    <style name="LoginBottomLogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">?loginBottomLogo</item>
    </style>

    <style name="LoginInputStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <!-- <item name="android:textColor">@color/theme</item> -->
        <item name="android:singleLine">true</item>
        <item name="android:background">?inputBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">?loginButtonBackground</item>
        <item name="android:textColor">?primaryTextColorReverse</item>
    </style>

    <style name="Widget.ActionItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/action_item_padding</item>
    </style>

    <style name="Widget.ActionItem.Light">
        <item name="android:background">@drawable/action_blue</item>
    </style>

    <style name="Widget.ActionGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WriteInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:layout_weight">1</item> -->
        <item name="android:gravity">left|top</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/write_input_padding</item>
    </style>

    <style name="WriteInfoCountStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?writeCountTextColor</item>
    </style>

    <style name="WriteInfoPhotoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="IconRemoveStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">?iconRemove</item>
        <item name="android:background">@drawable/action</item>
    </style>

    <style name="Widget.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Item.TextStyle">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#ff131313</item>
    </style>

    <style name="Item.TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.MetaInfoStyle">
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Widget.Head">
        <item name="android:layout_width">@dimen/head_width</item>
        <item name="android:layout_height">@dimen/head_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Animations" />

    <style name="Animations.Move">
        <item name="@android:windowEnterAnimation">@anim/move_left_to_right</item>
        <item name="@android:windowExitAnimation">@anim/move_right_to_left</item>
    </style>

