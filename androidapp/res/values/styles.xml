        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="StatusActionItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/action_item_padding</item>
        <item name="android:background">?statusActionItemBackground</item>
        <!-- <item name="android:contentDescription">@string/contentDescription</item> -->
    </style>

    <style name="LoginTopLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">?loginTopLogo</item>
    </style>

    <style name="LoginBottomLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">?loginBottomLogo</item>
    </style>

    <style name="LoginInput">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <!-- <item name="android:textColor">@color/theme</item> -->
        <item name="android:singleLine">true</item>
        <item name="android:background">?input_background</item>
        <item name="android:padding">10dp</item>
