    </style>

    <style name="LoginButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">?loginButtonBackground</item>
        <item name="android:textColor">?primaryTextColorReverse</item>
    </style>

    <style name="WriteActionItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/action_item_padding</item>
        <item name="android:background">?writeActionItemBackground</item>
    </style>

