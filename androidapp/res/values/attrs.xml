<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTheme">

        <!-- Style List -->
        <attr name="ButtonGroupStyle" format="reference"></attr>
        <attr name="SendGroupStyle" format="reference"></attr>
        <attr name="ButtonStyle" format="reference"></attr>
        <attr name="TitlePageIndicatorStyle" format="reference"></attr>
        <attr name="EditProfileInputStyle" format="reference"></attr>
        <attr name="ActionItemStyle" format="reference"></attr>
        <attr name="ActionGroupStyle" format="reference"></attr>

        <!-- drawable/color list -->


        <!-- Global Text Color -->
        <attr name="primaryTextColor" format="reference|color"></attr>
        <attr name="secondaryTextColor" format="reference|color"></attr>
        <attr name="primaryTextColorReverse" format="reference|color"></attr>
        <attr name="secondaryTextColorReverse" format="reference|color"></attr>

        <!-- Global Theme Color -->
        <attr name="primaryColor" format="reference|color"></attr>
        <attr name="secondaryColor" format="reference|color"></attr>

        <!-- Global Attrs -->
        <attr name="uiBackground" format="reference|color"></attr>
        <attr name="buttonBackground" format="reference"></attr>
        <attr name="inputBackground" format="reference"></attr>

        <!-- Profile Page -->
        <attr name="profileBlockBackground" format="reference|color"></attr>
        <attr name="profileItemTitleBackground" format="reference|color"></attr>
        <attr name="profileCountBackground" format="reference"></attr>
        <attr name="profileCountTextColor" format="reference|color"></attr>

        <!-- status attrs -->
        <attr name="statusHeaderBackground" format="reference"></attr>

        <!-- icon attrs -->
        <attr name="iconRemove" format="reference"></attr>

        <!-- Write Page -->
        <attr name="writeCountBackground" format="reference|color"></attr>
        <attr name="writeCountTextColor" format="reference|color"></attr>

        <!-- Login Page -->
        <attr name="loginTopLogo" format="reference"></attr>
        <attr name="loginBottomLogo" format="reference"></attr>
        <attr name="loginButtonBackground" format="reference"></attr>

        <!-- status view attr -->
        <attr name="statusViewStyle" format="reference"></attr>
    </declare-styleable>

</resources>