<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"></style>

    <!-- ====================Theme.Blue start=================== -->

    <style name="AppTheme.Blue" parent="Theme.Sherlock.Light">

        <!-- actionBar style -->
        <item name="actionBarStyle">@style/Blue.ActionBar</item>
        <item name="android:actionBarStyle">@style/Blue.ActionBar</item>

        <!-- listview style -->
        <item name="android:listViewStyle">@style/Blue.ListView</item>

        <!-- scrollbars style -->
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarSize">@dimen/scrollbarSize</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="profileItemStatisticsBox">@style/ProfileItemStatisticsBox.Blue</item>
        <item name="profileItemStatisticsText">@style/ProfileItemStatisticsText.Blue</item>
        <item name="profileItemActionButton">@style/ProfileItemActionButton.Blue</item>
        <item name="profileItemInfoTitle">@style/ProfileItemInfoTitle.Blue</item>
        <item name="profileItemInfoText">@style/ProfileItemInfoText.Blue</item>
    </style>

    <!-- Theme.Blue Style start -->

    <style name="Blue"></style>

    <!-- ActionBar Style -->

    <style name="Blue.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="titleTextStyle">@style/Blue.ActionBarTitle</item>
        <item name="android:titleTextStyle">@style/Blue.ActionBarTitle</item>
        <item name="icon">@drawable/ic_home</item>
        <item name="android:icon">@drawable/ic_home</item>
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="Blue.ActionBarTitle">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <!-- ListView Style -->

    <style name="Blue.ListView">
        <!-- <item name="android:background">@drawable/test</item> -->
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/dividerWidth</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <!-- AutoCompleteTextView Color Fix -->

    <style name="AppTheme.Blue.AutoCompleteTextViewFix">
        <item name="android:dropDownItemStyle">@style/Fix.DropDownItemLight</item>
        <item name="android:autoCompleteTextViewStyle">@style/Fix.AutoCompleteTextViewLight</item>
    </style>

    <!-- ===================Theme.Blue end==================== -->

    <style name="Fix.AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Fix.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>