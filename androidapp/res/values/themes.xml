<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"></style>

    <!-- ====================Theme.Blue start=================== -->

    <style name="AppTheme.Blue" parent="Theme.Sherlock.Light">

        <!-- actionBar style -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <!-- listview style -->
        <item name="android:listViewStyle">@style/ListViewStyle</item>

        <!-- scrollbars style -->
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarSize">@dimen/scrollbarSize</item>
        <item name="android:scrollbarStyle">insideOverlay</item>

        <!-- ========= the line below need change for for different theme ========= -->


        <!-- action bar color and drawable -->
        <item name="actionBarIcon">@drawable/ic_launcher</item>
        <item name="actionBarTextColor">@color/white</item>
        <item name="actionBarBackground">@drawable/actionbar_background</item>

        <!-- text color -->
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="primaryTextColorReverse">@color/white</item>
        <item name="secondaryTextColorReverse">@color/light_grey</item>

        <!-- profile color -->
        <item name="profileItemTitleBackground">@color/light_grey</item>
        <item name="profileActionBackground">@drawable/button_blue</item>
        <item name="profileBlockBackground">@color/fanfoublue_background</item>
        <item name="profileCountTextColor">@color/fanfoublue</item>
        <item name="profileCountBackground">@drawable/action</item>

        <!-- action color -->
        <item name="actionItemBackground">@drawable/action</item>
        <item name="actionBoxBackground">@color/fanfoublue</item>

        <!-- write color -->
        <item name="iconRemove">@drawable/ic_remove</item>
        <item name="writeCountTextColor">@color/fanfoublue</item>

        <!-- status style -->
        <item name="statusHeaderBackground">@drawable/header_blue</item>

        <!-- login logo -->
        <item name="loginTopLogo">@drawable/login_logo</item>
        <item name="loginBottomLogo">@drawable/login_bottom</item>
        <item name="loginButtonBackground">@drawable/button_blue</item>

        <!-- Global color and drawable -->
        <item name="inputBackground">@drawable/input</item>
        <item name="buttonBackground">@drawable/button_blue</item>
        <item name="primaryColor">@color/fanfoublue</item>
        <item name="secondaryColor">@color/fanfoublue_pressed</item>
        <item name="uiBackground">@color/transparent</item>
    </style> <!-- ===================Theme.Blue end==================== -->

    <style name="AppTheme.UIPhoto" parent="Theme.Sherlock"></style>

    <!-- ActionBar Style -->

    <style name="ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="icon">?actionBarIcon</item>
        <item name="android:icon">?actionBarIcon</item>
        <item name="background">?actionBarBackground</item>
        <item name="android:background">?actionBarBackground</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">?actionBarTextColor</item>
    </style>

    <!-- ListView Style -->

    <style name="ListViewStyle">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">@color/light_grey_translucent</item>
        <item name="android:dividerHeight">@dimen/dividerWidth</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

</resources>