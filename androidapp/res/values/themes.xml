<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"></style>

    <!-- ====================Theme.Blue start=================== -->

    <style name="AppTheme.UIPhoto" parent="Theme.Sherlock.NoActionBar"></style>

    <style name="AppTheme.Blue" parent="Theme.Sherlock.Light">

        <!-- actionBar style -->
        <item name="actionBarStyle">@style/Blue.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/Blue.ActionBarStyle</item>

        <!-- listview style -->
        <item name="android:listViewStyle">@style/Blue.ListViewStyle</item>

        <!-- scrollbars style -->
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarSize">@dimen/scrollbarSize</item>
        <item name="android:scrollbarStyle">insideOverlay</item>

        <!-- text color -->
        <item name="primaryTextColor">@color/solid_black</item>
        <item name="secondaryTextColor">@color/soft_white</item>
        <item name="primaryTextColorReverse">@color/solid_white</item>
        <item name="secondaryTextColorReverse">@color/soft_black</item>
        <item name="highlightTextColor">@color/soft_white</item>

        <!-- profile style -->
        <item name="profileItemTitleBackground">@color/soft_white</item>
        <item name="profileActionBackground">@drawable/button_blue</item>
        <item name="profileBlockBackground">#3335b5e5</item>
        <item name="profileCountTextColor">@color/theme</item>
        <item name="profileCountBackground">@drawable/selector</item>

        <!-- status style -->
        <item name="statusActionItemBackground">@drawable/action_item_background</item>
        <item name="statusActionBackground">@color/theme</item>

        <!-- write style -->
        <item name="writeActionItemBackground">@drawable/action_item_background</item>
        <item name="writeActionBackground">@color/theme</item>

        <!-- login logo style -->
        <item name="loginTopLogo">@drawable/login_logo</item>
        <item name="loginBottomLogo">@drawable/login_bottom</item>
        <item name="loginButtonBackground">@drawable/button_blue</item>

        <!-- Global Styles -->
        <item name="input_background">@drawable/input</item>
    </style>

    <!-- Theme.Blue Style start -->

    <style name="Blue"></style>

    <!-- ActionBar Style -->

    <style name="Blue.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="titleTextStyle">@style/Blue.ActionBarTitleStyle</item>
        <item name="android:titleTextStyle">@style/Blue.ActionBarTitleStyle</item>
        <item name="icon">@drawable/ic_home</item>
        <item name="android:icon">@drawable/ic_home</item>
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="Blue.ActionBarTitleStyle">
        <item name="android:textColor">@color/solid_white</item>
    </style>

    <!-- ListView Style -->

    <style name="Blue.ListViewStyle">

        <!-- <item name="android:background">@drawable/test</item> -->
        <item name="android:listSelector">@drawable/selector</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/dividerWidth</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <!-- AutoCompleteTextView Color Fix -->

    <style name="AppTheme.Blue.AutoCompleteTextViewFix">
        <item name="android:dropDownItemStyle">@style/Fix.DropDownItemLight</item>
        <item name="android:autoCompleteTextViewStyle">@style/Fix.AutoCompleteTextViewLight</item>
    </style>

    <!-- ===================Theme.Blue end==================== -->

    <style name="Fix.AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Fix.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>