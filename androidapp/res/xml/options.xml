    <PreferenceScreen android:title="使用偏好" >

        <!--
             <CheckBoxPreference android:defaultValue="true" android:key="@string/option_show_splash_screen" 
			android:summary="启动时显示闪屏画面" android:title="显示启动画面" />
        -->

        <ListPreference
            android:defaultValue="right"
            android:dialogTitle="刷新图标位置"
            android:entries="@array/bottom_icon_position"
            android:entryValues="@array/bottom_icon_position_values"
            android:key="@string/option_bottom_refresh_icon"
            android:summary="设置底部刷新图标位置"
            android:title="底部刷新图标" />

        <ListPreference
            android:defaultValue="none"
            android:dialogTitle="编辑图标位置"
            android:entries="@array/bottom_icon_position"
            android:entryValues="@array/bottom_icon_position_values"
            android:key="@string/option_bottom_write_icon"
            android:summary="设置底部编辑图标位置"
            android:title="底部编辑图标" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_refresh_on_open"
            android:summary="客户端启动时刷新时间线"
            android:title="启动时刷新" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_refresh_after_send"
            android:summary="发消息成功后刷新时间线"
            android:title="发消息后刷新" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_fast_scroll_on"
            android:summary="显示列表快速拖动滑块"
            android:title="快速拖动" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_page_scroll_endless"
            android:summary="页面切换使用循环滚动"
            android:title="循环滚动" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/option_reply_to_all_default"
            android:summary="默认回复所有人"
            android:title="全部回复" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/option_save_on_back_press"
            android:summary="保存未发送消息为草稿"
            android:title="保存草稿" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_fetch_relationships"
            android:summary="个人空间显示对方是否关注你"
            android:title="显示关注状态" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/option_play_sound_effect"
            android:summary="时间线有新消息时播放音效"
            android:title="音效反馈" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_confirm_on_exit"
            android:summary="退出客户端时需要确认"
            android:title="退出确认" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/option_autoupdate"
            android:summary="自动检测新版本"
            android:title="自动升级" />
    </PreferenceScreen>

    <PreferenceScreen android:title="其它功能" >

        <Preference
            android:key="@string/option_color_reset_all"
            android:summary="清除自定义颜色，恢复默认设置"
            android:title="清除自定义颜色" />

        <com.fanfou.app.preferences.ClearDataDialogPreference
            android:dialogMessage="是否要清空数据库中缓存的消息，私信和个人数据？（提示：客户端会自动清理过旧的数据，不建议手动清空）"
            android:dialogTitle="清空数据缓存"
            android:key="@string/option_cleandb"
            android:negativeButtonText="取消"
            android:positiveButtonText="确定"
            android:summary="清空缓存的消息，私信和个人数据"
            android:title="清空数据缓存" />

        <com.fanfou.app.preferences.ClearCacheDialogPreference
            android:dialogMessage="是否要清空存储卡中缓存的用户头像和消息图片？（提示：图片缓存在存储卡上，占用空间很小，不建议手动清空）"
            android:dialogTitle="清空图片缓存"
            android:key="@string/option_cleanpic"
            android:negativeButtonText="取消"
            android:positiveButtonText="确定"
            android:summary="清空存储卡中缓存的图片"
            android:title="清空图片缓存" />

        <com.fanfou.app.preferences.ResetAppDialogPreference
            android:dialogMessage="是否要重置所有数据？（此操作会清空所有个人设置，图片缓存和数据库）"
            android:dialogTitle="重置数据"
            android:key="@string/option_clear_data_and_settings"
            android:negativeButtonText="取消"
            android:positiveButtonText="确定"
            android:summary="重置所有个人设置，数据和缓存"
            android:title="重置数据" />
    </PreferenceScreen>

    <PreferenceScreen android:title="软件信息" >

        <Preference
            android:key="@string/option_current_account"
            android:title="当前帐号" />

        <Preference
            android:key="@string/option_check_update"
            android:summary="联网检测是否有新版本"
            android:title="软件升级" />

        <Preference
            android:key="@string/option_feedback"
            android:summary="通过邮件发送意见和建议"
            android:title="意见反馈" />

        <Preference
            android:key="@string/option_changelog"
            android:summary="查看客户端更新日志"
            android:title="更新日志" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://apps.fanfou.com/android/changelog.html" />
        </Preference>

        <Preference
            android:key="@string/option_website"
            android:summary="访问饭否网站获取更多信息"
            android:title="访问网站" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://fanfou.com/" />
        </Preference>

        <!--
             <CheckBoxPreference android:defaultValue="false" android:key="@string/option_debug_on" 
			android:summary="启用开发者模式(对发布版无效)" android:title="开发模式" />
        -->
    </PreferenceScreen>

</PreferenceScreen>