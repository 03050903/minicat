<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="设置" >

    <PreferenceScreen android:title="后台更新" >

        <PreferenceCategory android:title="后台更新" >

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="@string/option_notification"
                android:summary="启用后台更新"
                android:title="后台更新" />

            <ListPreference
                android:defaultValue="5"
                android:dependency="@string/option_notification"
                android:dialogTitle="后台更新时间间隔"
                android:entries="@array/notification_interval"
                android:entryValues="@array/notification_interval_values"
                android:key="@string/option_notification_interval"
                android:summary="后台更新时间间隔"
                android:title="更新频率" />
        </PreferenceCategory>

        <PreferenceCategory android:title="通知类型" >

            <CheckBoxPreference
                android:defaultValue="false"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_home"
                android:title="好友消息" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_mention"
                android:title="提到我的消息" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_dm"
                android:title="私信" />
        </PreferenceCategory>

        <PreferenceCategory android:title="通知设置" >

            <RingtonePreference
                android:defaultValue="content://settings/system/notification_sound"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_ringtone"
                android:ringtoneType="notification"
                android:title="铃声" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_vibrate"
                android:summary="收到消息和私信时震动提示"
                android:title="震动" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:dependency="@string/option_notification"
                android:key="@string/option_notification_led"
                android:summary="收到消息和私信时闪烁提示"
                android:title="指示灯" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen android:title="显示设置" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/option_color_use_highlight"
            android:summary="我的消息和@消息背景高亮显示"
            android:title="背景高亮" />

        <com.fanfou.app.preferences.colorpicker.ColorPickerPreference
            alphaSlider="true"
            android:defaultValue="@color/self_color"
            android:dependency="@string/option_color_use_highlight"
            android:key="@string/option_color_highlight_self"
            android:summary="时间线上我的消息背景颜色"
            android:title="我的消息" />

        <com.fanfou.app.preferences.colorpicker.ColorPickerPreference
            alphaSlider="true"
            android:defaultValue="@color/mentioned_color"
            android:dependency="@string/option_color_use_highlight"
            android:key="@string/option_color_highlight_mention"
            android:summary="时间线上\@消息背景颜色"
            android:title="\@消息" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_text_mode"
            android:summary="文本模式，不显示头像和图片"
            android:title="使用文本模式" />

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="选择消息页面图片显示方式"
            android:entries="@array/pic_level"
            android:entryValues="@array/pic_level_values"
            android:key="@string/option_pic_level"
            android:summary="设置消息页面图片大小"
            android:title="消息图片预览" />

        <com.fanfou.app.preferences.SeekBarPreference
            android:defaultValue="15"
            android:dialogTitle="选择字体大小"
            android:key="@string/option_fontsize"
            android:max="28"
            android:summary="设置文本内容字体大小"
            android:text="号"
            android:title="文本字体大小" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_force_fullscreen"
            android:summary="隐藏系统状态栏"
            android:title="全屏显示" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/option_force_portrait"
            android:summary="强制竖屏显示"
            android:title="锁定竖屏" />
    </PreferenceScreen>
