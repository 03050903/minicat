		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".SplashPage"
			android:theme="@style/Theme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".hd.HomeScreen"
			android:theme="@style/Theme" />

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".LoginPage"
			android:theme="@style/Theme" />

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".RegisterPage"
			android:theme="@style/Theme">
