<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:installLocation="auto"
	package="com.fanfou.app"
	android:versionCode="20111021"
	android:versionName="1.5.5" >
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:name=".App" >
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".LoginPage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".RegisterPage"
			android:theme="@style/Theme" >
		</activity>
		<activity
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:name=".HomePage"
			android:theme="@style/Theme" >
			<meta-data
				android:name="android.app.default_searchable"
				android:value=".SearchResultsPage" />
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".SearchPage"
			android:theme="@style/Theme" >
			<meta-data
				android:name="android.app.default_searchable"
				android:value=".SearchResultsPage" />
			<intent-filter >
				<action android:name="com.fanfou.app.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".AboutPage"
			android:theme="@style/Theme" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".PhotoViewPage"
			android:theme="@style/Theme.Black" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".StatusPage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.STATUS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".UserListPage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.FRIENDS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter >
				<action android:name="com.fanfou.app.action.FOLLOWERS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:host="timeline"
					android:scheme="fanfou" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".UserTimelinePage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.TIMELINE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:host="timeline"
					android:scheme="fanfou" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".UserFavoritesPage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.FAVORITES" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:host="favorites"
					android:scheme="fanfou" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".ThreadPage"
			android:theme="@style/Theme" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".RegisterPage"
			android:theme="@style/Theme" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".MyProfilePage"
			android:theme="@style/Theme" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".ProfilePage"
			android:theme="@style/Theme" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.PROFILE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:host="user"
					android:scheme="fanfou" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".MessageChatPage"
			android:theme="@style/Theme"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_share_name"
			android:name=".WritePage"
			android:theme="@style/Theme.AutoCompleteTextView"
			android:windowSoftInputMode="adjustResize" >
			<intent-filter >
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="image/*" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:name=".OptionsPage" />
		<activity
			android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:name=".SearchResultsPage"
			android:theme="@style/Theme" >
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<intent-filter >
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<intent-filter >
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:host="search"
					android:scheme="fanfou" />
			</intent-filter>
		</activity>
		<provider
			android:authorities="com.fanfou.app.provider"
			android:name=".db.FanFouProvider" />
		<service
			android:label="@string/app_name"
			android:name=".service.FetchService" />
		<service
			android:label="@string/app_name"
			android:name=".service.PostStatusService" />
		<service
			android:label="@string/app_name"
			android:name=".service.DownloadService" />
		<service
			android:label="@string/app_name"
			android:name=".service.PostMessageService" />
		<service
			android:label="@string/app_name"
			android:name=".service.ActionService" />
		<service
			android:label="@string/app_name"
			android:name=".service.CleanService" />
		<service
			android:label="@string/app_name"
			android:name=".service.NotificationService" />
		<service
			android:label="@string/app_name"
			android:name=".service.AutoCompleteService" />
		<receiver android:name=".receiver.BootReceiver" >
			<intent-filter >
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<receiver android:name=".receiver.AlarmReceiver" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.REPEAT" />
			</intent-filter>
		</receiver>
		<receiver android:name=".receiver.NotificationReceiver" >
			<intent-filter >
				<action android:name="com.fanfou.app.action.NOTIFICATION" />
			</intent-filter>
		</receiver>
		<receiver android:name=".receiver.NetworkReceiver" >
			<intent-filter >
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
			</intent-filter>
		</receiver>
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.READ_LOGS" />
	<uses-sdk
		android:minSdkVersion="4"
		android:targetSdkVersion="10" />
</manifest>