		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".WebviewPage"
			android:theme="@style/Theme">
		</activity>

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".NewVersionPage"
			android:theme="@style/Theme">
		</activity>

		<activity android:label="@string/app_name" android:name=".HomePage"
			android:launchMode="singleTask" android:theme="@style/Theme"
			android:configChanges="keyboardHidden|orientation">
			<meta-data android:name="android.app.default_searchable"
				android:value=".SearchResultsPage" />
		</activity>

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".SearchPage"
			android:theme="@style/Theme">
			<meta-data android:name="android.app.default_searchable"
				android:value=".SearchResultsPage" />

			<intent-filter>
				<action android:name="com.fanfou.app.action.SEARCH" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:label="@string/app_name" android:name=".EditProfilePage"
			android:theme="@style/Theme" android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="adjustResize">
		</activity>

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_name" android:name=".AboutPage"
			android:theme="@style/Theme" />

		<activity android:configChanges="keyboardHidden|orientation"
			android:label="@string/app_photoviewer_name" android:name=".PhotoViewPage"
			android:theme="@style/ThemeBlack">
